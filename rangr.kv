#:kivy 1.0.9

<loginScreen>:
	BoxLayout:
		id: f_loginScreen
		orientation: 'vertical'
		padding: 10
		spacing: 10
		Label:
			font_name: 'Roboto-Italic'
			font_size: '50sp'
			text: 'rangr'
		Label:
			font_size: '25sp'
			text: 'Choose a username:'
		TextInput:
			id: f_username
			pos_hint: {'center_x': .5}
			size_hint_x: .75			
			size_hint_y: .17
		Label:
			halign: 'center'
			height: self.texture_size[1]
			pos_hint: {'center_x': .5}
			size_hint_x: .75			
			size_hint_y: None
			text: '''Your username will be automatically linked to your phone number - it will be your profile's name and will serve as your display name to others if you choose to use the online portions of this application. This can be changed later.'''
			text_size: self.width, None
		Button:
			font_size: '25sp'
			id: f_submit
			on_release: 
				app.submitUsername(f_username.text)
				root.manager.current = 'home'
			pos_hint: {'center_x': .5}
			size_hint_x: .5
			size_hint_y: .5
			text: 'Submit'

<homeScreen>:
	NavigationDrawer:
		anim_type: 'slide_above_anim'
		id: f_leftNav
		touch_accept_width: 50
		BoxLayout:
			orientation: "vertical"
		    Button:
		    	on_release:
		    		root.manager.current = 'home'
		        text: "Home"
		    Button:
				on_release:
		    		root.manager.current = 'userProfile'
		        text: "My profile"
		    Button:
				on_release:
		    		root.manager.current = 'makeReport'
		        text: "Make a report"
			Button:
				on_release:
		    		root.manager.current = 'appInfo'
		        text: "App info"
		BoxLayout:
			id: f_news_parks_announcements
			orientation: "vertical"
			GridLayout:
				id: f_homeScreen_top_row
				cols: 2
				rows: 1
				size_hint_y: .3
				Button:
					on_release: f_leftNav.toggle_state()
					size_hint_x: .1
					text: "Hamburger"
				TextInput:
					size_hint_x: .9
					text: "search parks" 
			Button:
				text: "News"
			Button:
				text: "My parks"
			Button:
				text: "Announcements"
			
<profileScreen>:
	NavigationDrawer:
